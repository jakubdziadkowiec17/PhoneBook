@page
@model PhoneBook.Pages.ContactsModel
@{
    ViewData["Title"] = "Contact List";
}

<br />
<h1><center>Contact List</center></h1
<br /><br /><br />
<a class='btn btn-primary btn-sm' href='/Create'>Add Contact</a>
<br />
<br />
<table class="table">
    <thead>
        <tr> 

            <th>Name</th>  
            <th>Surname</th>  
            <th>Phone Number</th>
            <th>E-mail</th>
            <th>Address</th>
            <th>Note</th>
            <th>Created At</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.contactList)
        {
            <tr>
                <td>@item.name</td>
                <td>@item.surname</td>
                <td>@item.phone_number</td>
                <td>@item.email</td>
                <td>@item.address</td>
                <td>@item.note</td>
                <td>@item.created_at</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Edit?id=@item.id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Delete?id=@item.id">Delete</a>
                    @if (item.favorite == "no")
                    {
                        <a class="btn btn-success btn-sm" href="/Follow?id=@item.id">Follow</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>